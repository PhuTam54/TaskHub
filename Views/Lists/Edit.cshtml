@model TaskHub.Models.List

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>List</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ListId" />
            <div class="form-group">
                <label asp-for="BoardId" class="control-label"></label>
                <select asp-for="BoardId" class="form-control" asp-items="ViewBag.BoardId"></select>
                <span asp-validation-for="BoardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListTitle" class="control-label"></label>
                <input asp-for="ListTitle" class="form-control" />
                <span asp-validation-for="ListTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
