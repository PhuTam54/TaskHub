@model IEnumerable<TaskHub.Models.Board>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BoardTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkSpace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BoardTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkSpace.WorkSpaceTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BoardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BoardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BoardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
