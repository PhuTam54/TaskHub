@model TaskHub.Models.WorkSpace

@{
    ViewData["Title"] = "Create";
}

<h4 class="p-3">WorkSpace</h4>
<div class="row">
    <!-- Main content -->
    <section class="content">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">Add new WorkSpace</h3>
                            </div>
                            <div class="card-body d-flex">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="WorkSpaceTitle" class="control-label"></label>
                                        <input asp-for="WorkSpaceTitle" class="form-control" />
                                        <span asp-validation-for="WorkSpaceTitle" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="WorkSpaceDescription" class="control-label"></label>
                                        <input asp-for="WorkSpaceDescription" class="form-control" />
                                        <span asp-validation-for="WorkSpaceDescription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Status" class="control-label"></label>
                                        <input asp-for="Status" class="form-control" />
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="UserId" class="control-label"></label>
                                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                                    </div>
                                    <!-- /.form group -->
                                </div>

                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <input type="submit" value="Create" class="btn btn-success float-right" />
                    </div>
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
