<body>
    <body class="hold-transition sidebar-mini layout-fixed">
        <div class="wrapper">
            <!-- Preloader -->
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__shake" src="~/test/icons/favicon.ico" alt="AdminLTELogo" height="60" width="60">
            </div>

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="#" class="nav-link">Contact</a>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->

            <div class="content-wrapper">
                @RenderBody()
            </div>

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/TaskItems" class="brand-link navbar-brand d-flex align-items-center px-4 px-lg-5" style="margin-right: -8px">
                    <h3 class="" style="color: #c2c7d0; margin: 0 0 0 -30px">
                        <img class="rounded-3" style="width: 55px;" src="~/test/icons/favicon.ico" alt="" />
                        </i>TaskHub
                    </h3>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user panel (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/test/icons/default-avatar.jpg" style="width: 40px;" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            <a asp-controller="Accounts" asp-action="Edit" class="d-block">Phu Tam</a>
                        </div>
                    </div>

                    <!-- SidebarSearch Form -->
                    <div class="form-inline">
                        <div class="input-group" data-widget="sidebar-search">
                            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-sidebar">
                                    <i class="fas fa-search fa-fw"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                                    with font-awesome or any other icon font library -->
                            <li class="nav-item menu-ope {{ request()->is('admin/admin-dashboard') ? 'menu-open' : '' }}">
                                <a href="/Dashboard"
                                    class="nav-link active
                                    {{request()->
                                    is('admin/admin-dashboard') ? 'active' : '' }}"
                                    >
                                    <i class="fa fa-chart-bar nav-icon"></i>
                                    <p>My Dashboard</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/WorkSpaces" class="nav-link {{request()->is('admin/admin-result') ? 'active' : '' }}">
                                    <i class="fa fa-layer-group nav-icon"></i>
                                    <p>WorkSpaces</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Users" class="nav-link {{request()->is('admin/admin-result') ? 'active' : '' }}">
                                    <i class="fa fa-users nav-icon"></i>
                                    <p>Users</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Accounts" class="nav-link">
                                    <i class="fa fa-users nav-icon"></i>
                                    <p>Accounts</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Accounts" asp-action="Logout" class="nav-link">
                                    <i class="fa fa-user"></i>
                                        <p>Logout</p>
                                </a>
                            </li>

                            <li class="nav-header text-center" style="margin-left: -10px"><br><br><br><br>Phu Tam 54</li>
                        </ul>
                    </nav>
